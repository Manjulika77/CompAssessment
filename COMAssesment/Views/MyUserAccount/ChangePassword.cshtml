@model Utility.Model.ChangePasswordViewModels

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_CompUserAccountLayout.cshtml";
}

<h2>ChangePassword</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2" for="UserName">User Name</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Old_Pass">Old Password</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Old_Pass, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Old_Pass, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="New_Pass">New Password</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.New_Pass, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.New_Pass, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Confirm_New_Pass">Retype New Password</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Confirm_New_Pass, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Confirm_New_Pass, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Reset Password" class="btn btn-default" />
            </div>
            <br/>
            <p><label style="color:red;">@ViewBag.msg</label></p>
        </div>
    </div>
}

