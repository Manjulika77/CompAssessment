@model Utility.Model.CreateAssessmentViewModel

@{
    ViewBag.Title = "CreateAssessment";
    Layout = "~/Views/Shared/_CompUserAccountLayout.cshtml";
}

<h2>Create Assessment</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="AssessmentName">Assessment Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.AssessmentName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AssessmentName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="AssessmentDate">Assessment Date</label>
            <div class="col-md-10">
                <input type="date" class="form-control" id="AssessmentDate" name="AssessmentDate" />
                @Html.ValidationMessageFor(model => model.AssessmentDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="AssessmentTime">Assessment Time</label>
            <div class="col-md-10">
                <input type="time" class="form-control" id="AssessmentTime" name="AssessmentTime" />
                @Html.ValidationMessageFor(model => model.AssessmentTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">            
            <label class="control-label col-md-2" for="Duration">Duration (in minute)</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Duration, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Duration, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.IsActive, htmlAttributes: new { @checked = true })
                    @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
            <p style="color:red;">@ViewBag.msg</p>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "AssessmentList")
</div>
